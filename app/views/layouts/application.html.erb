<!DOCTYPE html>
<html>
<head>
  <title>Pragprog Books Online Store</title>
  <%= stylesheet_link_tag "scaffold" %>
  <%= stylesheet_link_tag "depot", :media => "all" %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>
<body id="store">
	
	<div id="banner">
    <a href="/"><%= image_tag("logo.png") %></a>
		<%= @page_title || "Pragmatic Bookshelf" %>
	</div>
	<div id="columns">
		<div id="side">
				<div id="cart">
					<% if @cart %>
						<%= hidden_div_if(@cart.line_items.empty?, :id => "cart") do %>
							<%= render @cart %>
						<% end %>
					<% end %>
        </div>
      <h2>Admin</h2>
      <a href="/login">Log In</a><br />
      <a href="/admin">Dashboard</a><br />
      <a href="/users">Users</a><br />
      <a href="/products">Products</a><br />
      <a href="/orders">Orders</a><br />
      <a href="/line_items">Line Items</a><br />
      <a href="/carts">Carts</a><br />
      <h2>Navigation</h2>
      <a href="/">Online Store</a> <br />
      <a href="/pages/faq">Questions</a><br />
			<a href="/posts#index">Blog</a><br />
			<a href="/pages/contact">Contact</a><br />

		</div>
		<div id="main">
		  <%= yield %>
		</div>
	</div>
</body>
</html>
